{
    "name": "faber",
    "version": "0.7.0",
    "description": "A Latin-to-JavaScript transpiler - The Roman Craftsman",
    "module": "index.ts",
    "type": "module",
    "bin": {
        "faber": "./fons/faber/cli.ts"
    },
    "scripts": {
        "build": "bun ./scripta/build.ts",
        "faber": "opus/bin/faber",
        "rivus": "opus/bin/rivus",
        "nanus": "opus/bin/nanus",
        "build:faber": "bun ./scripta/build-faber.ts",
        "build:nanus": "bun ./scripta/build-nanus.ts",
        "build:norma": "bun ./scripta/build-norma.ts",
        "build:rivus": "bun ./scripta/build-rivus.ts",
        "rivus:features": "bun ./scripta/rivus-features.ts",
        "build:artifex": "bun ./scripta/build-artifex.ts",
        "exempla": "bun ./scripta/build-exempla.ts",
        "build:exec": "bun ./scripta/build-exec.ts",
        "lint": "./scripta/lint",
        "lint:fix": "./scripta/lint --fix",
        "misc:ast": "bun ./scripta/misc-ast-sync.ts",
        "misc:tree-sitter": "bun ./scripta/misc-tree-sitter.ts",
        "prettier": "./scripta/prettier",
        "prettier:check": "./scripta/prettier --check",
        "release": "./scripta/release",
        "sanity": "bun ./scripta/sanity.ts",
        "stats": "bun ./scripta/stats.ts",
        "test": "./scripta/test",
        "test:faber": "bun test fons/proba/faber.test.ts",
        "test:rivus": "bun test fons/proba/rivus.test.ts --timeout 5000",
        "test:report": "./scripta/test-report",
        "typecheck": "./scripta/typecheck",
        "use": "./scripta/use",
        "verify:exempla": "bun ./scripta/verify-exempla.ts"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/bun": "latest",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.7.4",
        "typescript-eslint": "^8.50.0"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "keywords": [
        "latin",
        "transpiler",
        "compiler",
        "javascript"
    ],
    "license": "MIT",
    "dependencies": {
        "smol-toml": "^1.6.0",
        "yaml": "^2.8.2"
    }
}
