// =============================================================================
// COMPARISON WITH OTHER SYNTAX
// =============================================================================

// Faber (source-first):
ex database importa connect, query, disconnect

// JavaScript (destination-first):
// import { connect, query, disconnect } from 'database'

// Python (similar to Faber):
// from database import connect, query, disconnect

// The Faber syntax emphasizes the source (where you're importing from)
// This aligns with Latin's flexible word order and ex...pro pattern

// =============================================================================
// IMPORT IN PRACTICE
// =============================================================================

// Utility module
ex utilities importa isEmpty, isValid

functio processData(data) {
    si isEmpty(data) {
        scribe "No data to process"
        redde
    }

    si non isValid(data) {
        iace "Invalid data"
    }

    scribe "Processing:", data
}

