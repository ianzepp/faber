#!/usr/bin/env bash
# Install faber to ~/.local/bin
set -euo pipefail

cd "$(dirname "$0")/.."

if [[ ! -f opus/faber ]]; then
    echo "Error: opus/faber not found. Run 'bun run build' first."
    exit 1
fi

mkdir -p ~/.local/bin
rm -f ~/.local/bin/faber
ln -s "$(pwd)/opus/faber" ~/.local/bin/faber
echo "Installed: ~/.local/bin/faber â†’ $(pwd)/opus/faber"
