# Iterating over arrays with ex...pro
#
# ex <collection> pro <item> { <body> }

incipit {
    # Iterate over number array
    fixum numbers = [1, 2, 3, 4, 5]

    ex numbers fixum n {
        scribe n
    }

    # Iterate over string array
    fixum names = ["Marcus", "Julia", "Claudia"]

    ex names fixum name {
        scribe name
    }

    # Process items
    fixum values = [10, 20, 30]

    ex values fixum v {
        fixum doubled = v * 2
        scribe doubled
    }
}
