# Lambda expressions (closures)
# Pattern: clausura param: expr
# Pattern: clausura param -> <type>: expr

incipit {
    # Simple lambda with single parameter
    fixum double = clausura x: x * 2
    scribe double(5)

    # Multi-parameter lambda
    fixum add = clausura a, b -> numerus: a + b
    scribe add(3, 4)

    # Lambda with array map
    fixum numbers = [1, 2, 3]
    fixum doubled = numbers.map(clausura x: x * 2)
    scribe doubled

    # Lambda with array filter
    fixum evens = numbers.filter(clausura x: x % 2 == 0)
    scribe evens

    # Lambda stored and reused
    fixum isPositive = clausura n -> bivalens: n > 0
    scribe isPositive(10)
    scribe isPositive(-5)
}
