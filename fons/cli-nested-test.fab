# CLI Nested Commands Test
# Testing path-based subcommands per issue #156

@ cli "myapp"
@ versio "1.0.0"
@ descriptio "Test app with nested commands"
incipit {}

# Top-level command
@ imperium "status"
functio status(si bivalens verbose ut v) -> vacuum {
    scribe "Status check..."
}

# Nested under "remote"
@ imperium "remote/add"
functio remoteAdd(textus name, textus url) -> vacuum {
    scribe scriptum("Adding remote § at §", name, url)
}

@ imperium "remote/remove"
functio remoteRemove(textus name) -> vacuum {
    scribe scriptum("Removing remote §", name)
}

@ imperium "remote/list"
@ alias "ls"
functio remoteList() -> vacuum {
    scribe "Listing remotes..."
}

# Deeply nested under "remote/origin"
@ imperium "remote/origin/show"
functio remoteOriginShow() -> vacuum {
    scribe "Showing origin details..."
}

@ imperium "remote/origin/set-url"
functio remoteOriginSetUrl(textus url) -> vacuum {
    scribe scriptum("Setting origin URL to §", url)
}

# Another top-level group
@ imperium "config/get"
functio configGet(textus key) -> vacuum {
    scribe scriptum("Getting config §", key)
}

@ imperium "config/set"
functio configSet(textus key, textus value) -> vacuum {
    scribe scriptum("Setting § = §", key, value)
}
