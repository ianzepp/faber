# ============================================================================
# TOKEN STRUCTURE
# ============================================================================

# A single token from the source
@ publica
genus Symbolum {
    SymbolumGenus species
    textus valor       # raw text of the token
    Locus locus
    si textus verbum     # if Verbum, surface spelling
    si VerbumId verbumId # if Verbum, canonical identity
}

# ============================================================================
# FACTORY FUNCTIONS
# ============================================================================

# Create a token
@ publica
functio symbolum(de SymbolumGenus species, de textus valor, de Locus locus) -> Symbolum {
    redde { species: species, valor: valor, locus: locus, verbum: nihil, verbumId: nihil } novum Symbolum
}

# Create a keyword token
@ publica
functio symbolumVerbum(de textus verbum, de Locus locus) -> Symbolum {
    redde {
        species: SymbolumGenus.Verbum,
        valor: verbum,
        locus: locus,
        verbum: verbum,
        verbumId: nihil
    } novum Symbolum
}

# Create a keyword token with canonical identity
@ publica
functio symbolumVerbumId(de textus verbum, de VerbumId verbumId, de Locus locus) -> Symbolum {
    redde {
        species: SymbolumGenus.Verbum,
        valor: verbum,
        locus: locus,
        verbum: verbum,
        verbumId: verbumId
    } novum Symbolum
}

# ============================================================================
# QUERY FUNCTIONS
# ============================================================================

# Check if token is a specific keyword (surface spelling)
@ publica
functio estVerbum(de Symbolum sym, de textus verbum) -> bivalens {
    redde sym.species == SymbolumGenus.Verbum && sym.verbum == verbum
}

# Check if token is a specific keyword (canonical identity)
@ publica
functio estVerbumId(de Symbolum sym, de VerbumId verbumId) -> bivalens {
    redde sym.species == SymbolumGenus.Verbum && sym.verbumId == verbumId
}

# Check if token is EOF
@ publica
functio estFinis(de Symbolum sym) -> bivalens {
    redde sym.species == SymbolumGenus.Finis
}
